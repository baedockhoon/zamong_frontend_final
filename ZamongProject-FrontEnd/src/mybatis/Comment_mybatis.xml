<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace속성:매퍼파일의 완전한경로 .xml는 생략 -->
<!-- ※ibatis와는 다르게 id값에 .(dot)를 사용 못한다. -->
<mapper namespace="mybatis.NotiData_mybatis">
	<!--resultMap사용시 column속성 필수  -->
	<resultMap id="CommentDTOResult" type="Comment">
	    <result property="mg_cm_no" column="mg_cm_no"/>
	    <result property="mg_cm_regidate" column="mg_cm_regidate"/>
	    <result property="mg_no" column="mg_no"/>
	    <result property="me_no" column="me_no"/>
	    <result property="mg_cm_contents" column="mg_cm_contents"/>
 	</resultMap>
	
	
	
 	<!-- id속성에 지정한 값을 자바코드(DAO계열 클래스)에서 
           식별자로 사용 -->
  
  	<select id="CommentList" parameterType="java.util.Map" resultMap="CommentDTOResult">
		SELECT MG.*,ME.ME_ID FROM MG_COMMENT MG JOIN ME_MEMBER ME ON MG.ME_NO = ME.ME_NO ORDER BY MG.MG_NO DESC
	</select>
  
  
           
           
