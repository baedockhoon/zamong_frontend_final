<!-- namespace속성:매퍼파일의 완전한경로 .xml는 생략 -->
<!-- ※ibatis와는 다르게 id값에 .(dot)를 사용 못한다. -->
<mapper namespace="mybatis/Problem_mybatis.xml">
	<!--resultMap사용시 column속성 필수  -->
	<resultMap id="ProblemDTOResult" type="ProblemData">
	    <result property="mq_no" column="mq_no"/>
	    <result property="mq_regidate" column="mq_regidate"/>
	    <result property="me_no" column="me_no"/>
	    <result property="mq_useenv" column="mq_useenv"/>
	    <result property="mq_os" column="mq_os"/>
	    <result property="mq_browser" column="mq_browser"/>
	    <result property="mq_tel" column="mq_tel"/>
	     <result property="mq_email" column="mq_email"/>
	      <result property="mq_contents" column="mq_contents"/>
	      <result property="mq_uploadfile" column="mq_uploadfile"/>
	      <result property="mq_status" column="mq_status"/>
	      <result property="mq_largedivide" column="mq_largedivide"/>
	      <result property="mq_mediumdivide" column="mq_mediumdivide"/>

 	</resultMap>
 	
